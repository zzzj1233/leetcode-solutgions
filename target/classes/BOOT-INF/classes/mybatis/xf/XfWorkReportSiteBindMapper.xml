<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfWorkReportSiteBindMapper">

    <insert id="insert">
        insert into xf_work_report_site_bind
        values (#{workReportId}, #{siteId}, #{senderId})
    </insert>

    <insert id="insertBatch">
        insert into xf_work_report_site_bind(work_report_id, site_id)
        values
        <foreach collection="siteIds" item="item" separator=",">
            (#{workReportId}, #{item},#{senderId})
        </foreach>
    </insert>

    <select id="selectReportIdBySiteAndSender" resultType="java.lang.Long">
        select work_report_id
        from xf_work_report_site_bind
        where site_id = #{siteId}
          and sender_id = #{senderId}
    </select>
</mapper>