<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfMaintainAdjustRecordMapper">

    <resultMap type="com.ruoyi.project.xf.domain.XfMaintainAdjustRecord" id="XfMaintainAdjustRecordResult">
        <result property="id" column="id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="userId" column="user_id"/>
        <result property="beforeAdjustValue" column="before_adjust_value"/>
        <result property="afterAdjustValue" column="after_adjust_value"/>
        <result property="createTime" column="create_time"/>
        <result property="userName" column="fullname"/>
        <result property="goodsName" column="goods_name"/>
    </resultMap>

    <sql id="selectXfMaintainAdjustRecordVo">
        select re.id,
               goods_id,
               user_id,
               before_adjust_value,
               after_adjust_value,
               re.create_time,
               user.fullname,
               goods.goods_name
        from xf_maintain_adjust_record as re
                 left outer join xf_user_customer as user
                                 on re.user_id = user.id
                 left outer join xf_wz_goods as goods
                                 on re.goods_id = goods.id
    </sql>

    <select id="selectXfMaintainAdjustRecordList" parameterType="XfMaintainAdjustRecord" resultMap="XfMaintainAdjustRecordResult">
        <include refid="selectXfMaintainAdjustRecordVo"/>
        <where>
            <if test="goodsId != null ">and goods_id = #{goodsId}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="beforeAdjustValue != null ">and before_adjust_value = #{beforeAdjustValue}</if>
            <if test="afterAdjustValue != null ">and after_adjust_value = #{afterAdjustValue}</if>
            <if test="goodsName != null and goodsName != '' ">and goods.goods_name like concat('%',#{goodsName},'%')</if>
        </where>
        order by re.create_time desc
    </select>

    <select id="selectXfMaintainAdjustRecordById" parameterType="Long" resultMap="XfMaintainAdjustRecordResult">
        <include refid="selectXfMaintainAdjustRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertXfMaintainAdjustRecord" parameterType="XfMaintainAdjustRecord" useGeneratedKeys="true" keyProperty="id">
        insert into xf_maintain_adjust_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goodsId != null ">goods_id,</if>
            <if test="userId != null ">user_id,</if>
            <if test="beforeAdjustValue != null ">before_adjust_value,</if>
            <if test="afterAdjustValue != null ">after_adjust_value,</if>
            <if test="createTime != null ">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="goodsId != null ">#{goodsId},</if>
            <if test="userId != null ">#{userId},</if>
            <if test="beforeAdjustValue != null ">#{beforeAdjustValue},</if>
            <if test="afterAdjustValue != null ">#{afterAdjustValue},</if>
            <if test="createTime != null ">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateXfMaintainAdjustRecord" parameterType="XfMaintainAdjustRecord">
        update xf_maintain_adjust_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="goodsId != null ">goods_id = #{goodsId},</if>
            <if test="userId != null ">user_id = #{userId},</if>
            <if test="beforeAdjustValue != null ">before_adjust_value = #{beforeAdjustValue},</if>
            <if test="afterAdjustValue != null ">after_adjust_value = #{afterAdjustValue},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteXfMaintainAdjustRecordById" parameterType="Long">
        delete
        from xf_maintain_adjust_record
        where id = #{id}
    </delete>

    <delete id="deleteXfMaintainAdjustRecordByIds" parameterType="String">
        delete from xf_maintain_adjust_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>