<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfKqBTrainSiteMapper">
    
    <resultMap type="XfKqBTrainSite" id="XfKqBTrainSiteResult">
        <result property="id"    column="id"    />
        <result property="trainId"    column="train_id"    />
        <result property="siteId"    column="site_id"    />
    </resultMap>

    <sql id="selectXfKqBTrainSiteVo">
        select id, train_id, site_id from xf_kq_b_train_site
    </sql>

    <select id="selectXfKqBTrainSiteList" parameterType="XfKqBTrainSite" resultMap="XfKqBTrainSiteResult">
        <include refid="selectXfKqBTrainSiteVo"/>
        <where>  
            <if test="trainId != null "> and train_id = #{trainId}</if>
            <if test="siteId != null "> and site_id = #{siteId}</if>
        </where>
    </select>
    
    <select id="selectXfKqBTrainSiteById" parameterType="Long" resultMap="XfKqBTrainSiteResult">
        <include refid="selectXfKqBTrainSiteVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertXfKqBTrainSite" parameterType="XfKqBTrainSite" useGeneratedKeys="true" keyProperty="id">
        insert into xf_kq_b_train_site
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="trainId != null ">train_id,</if>
            <if test="siteId != null ">site_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="trainId != null ">#{trainId},</if>
            <if test="siteId != null ">#{siteId},</if>
         </trim>
    </insert>

    <update id="updateXfKqBTrainSite" parameterType="XfKqBTrainSite">
        update xf_kq_b_train_site
        <trim prefix="SET" suffixOverrides=",">
            <if test="trainId != null ">train_id = #{trainId},</if>
            <if test="siteId != null ">site_id = #{siteId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteXfKqBTrainSiteById" parameterType="Long">
        delete from xf_kq_b_train_site where id = #{id}
    </delete>

    <delete id="deleteXfKqBTrainSiteByIds" parameterType="String">
        delete from xf_kq_b_train_site where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>