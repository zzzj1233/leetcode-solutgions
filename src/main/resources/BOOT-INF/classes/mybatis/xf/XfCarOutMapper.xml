<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfCarOutMapper">

    <resultMap type="XfCarOut" id="XfCarOutResult">
        <result property="id" column="id"/>
        <result property="carId" column="car_id"/>
        <result property="outType" column="out_type"/>
        <result property="applyRecordId" column="apply_record_id"/>
        <result property="outTime" column="out_time"/>
        <result property="returnTime" column="return_time"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <resultMap id="voResMap" type="com.ruoyi.project.xf.vo.output.CarOutVo">
        <result property="carNum" column="car_no"/>
        <result property="outTime" column="out_time"/>
        <result property="returnTime" column="return_time"/>
        <result property="applyerName" column="fullname"/>
        <result property="outType" column="out_type"/>
        <result property="carStatus" column="car_status"/>
    </resultMap>

    <sql id="selectXfCarOutVo">
        select id,
               car_id,
               out_type,
               apply_record_id,
               out_time,
               return_time,
               user_id,
               create_time
        from xf_car_out
    </sql>

    <update id="markCarReturn">
        update xf_car_out
        set return_time = now()
        where car_id = #{carId}
    </update>

    <select id="selectXfCarOutList" parameterType="XfCarOut" resultMap="XfCarOutResult">
        <include refid="selectXfCarOutVo"/>
        <where>
            <if test="carId != null ">and car_id = #{carId}</if>
            <if test="outType != null ">and out_type = #{outType}</if>
            <if test="applyRecordId != null ">and apply_record_id = #{applyRecordId}</if>
            <if test="outTime != null ">and out_time = #{outTime}</if>
            <if test="returnTime != null ">and return_time = #{returnTime}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
        </where>
    </select>

    <select id="selectXfCarOutById" parameterType="Long" resultMap="XfCarOutResult">
        <include refid="selectXfCarOutVo"/>
        where id = #{id}
    </select>

    <select id="selectVoList" resultMap="voResMap">
        select g.car_no, o.out_time,o.return_time, u.fullname, o.out_type, g.car_status
        from xf_car_out as o
                 left outer join xf_wz_goods as g
                                 on o.car_id = g.id
                 left outer join xf_user_customer as u
                                 on u.id = o.user_id
        order by o.create_time desc
    </select>

    <insert id="insertXfCarOut" parameterType="XfCarOut" useGeneratedKeys="true" keyProperty="id">
        insert into xf_car_out
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carId != null ">car_id,</if>
            <if test="outType != null ">out_type,</if>
            <if test="applyRecordId != null ">apply_record_id,</if>
            <if test="outTime != null ">out_time,</if>
            <if test="returnTime != null ">return_time,</if>
            <if test="userId != null ">user_id,</if>
            <if test="createTime != null ">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carId != null ">#{carId},</if>
            <if test="outType != null ">#{outType},</if>
            <if test="applyRecordId != null ">#{applyRecordId},</if>
            <if test="outTime != null ">#{outTime},</if>
            <if test="returnTime != null ">#{returnTime},</if>
            <if test="userId != null ">#{userId},</if>
            <if test="createTime != null ">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateXfCarOut" parameterType="XfCarOut">
        update xf_car_out
        <trim prefix="SET" suffixOverrides=",">
            <if test="carId != null ">car_id = #{carId},</if>
            <if test="outType != null ">out_type = #{outType},</if>
            <if test="applyRecordId != null ">apply_record_id = #{applyRecordId},</if>
            <if test="outTime != null ">out_time = #{outTime},</if>
            <if test="returnTime != null ">return_time = #{returnTime},</if>
            <if test="userId != null ">user_id = #{userId},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteXfCarOutById" parameterType="Long">
        delete
        from xf_car_out
        where id = #{id}
    </delete>

    <delete id="deleteXfCarOutByIds" parameterType="String">
        delete from xf_car_out where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>