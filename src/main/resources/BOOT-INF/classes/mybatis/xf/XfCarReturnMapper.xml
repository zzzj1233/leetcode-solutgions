<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfCarReturnMapper">

    <resultMap type="com.ruoyi.project.xf.domain.XfCarReturn" id="XfCarReturnResult">
        <result property="id" column="id"/>
        <result property="carId" column="car_id"/>
        <result property="returnTime" column="return_time"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="fullname"/>
        <result property="carNo" column="car_no"/>
    </resultMap>

    <sql id="selectXfCarReturnVo">
        select id, car_id, return_time, user_id
        from xf_car_return
    </sql>

    <select id="selectXfCarReturnList" parameterType="XfCarReturn" resultMap="XfCarReturnResult">
        <include refid="selectXfCarReturnVo"/>
        <where>
            <if test="carId != null ">and car_id = #{carId}</if>
            <if test="returnTime != null ">and return_time = #{returnTime}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
        </where>
    </select>

    <select id="selectXfCarReturnById" parameterType="Long" resultMap="XfCarReturnResult">
        <include refid="selectXfCarReturnVo"/>
        where id = #{id}
    </select>

    <select id="selectBySiteId" resultMap="XfCarReturnResult">
        select r.return_time, c.fullname, g.car_no
        from xf_car_return as r
                 left outer join xf_wz_goods as g
                                 on r.car_id = g.id
                 left outer join xf_user_customer as c
                                 on r.user_id = c.id
        where g.site_id = #{siteId}
        order by r.return_time desc
    </select>

    <insert id="insertXfCarReturn" parameterType="XfCarReturn" useGeneratedKeys="true" keyProperty="id">
        insert into xf_car_return
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carId != null ">car_id,</if>
            <if test="returnTime != null ">return_time,</if>
            <if test="userId != null ">user_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carId != null ">#{carId},</if>
            <if test="returnTime != null ">#{returnTime},</if>
            <if test="userId != null ">#{userId},</if>
        </trim>
    </insert>

    <update id="updateXfCarReturn" parameterType="XfCarReturn">
        update xf_car_return
        <trim prefix="SET" suffixOverrides=",">
            <if test="carId != null ">car_id = #{carId},</if>
            <if test="returnTime != null ">return_time = #{returnTime},</if>
            <if test="userId != null ">user_id = #{userId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteXfCarReturnById" parameterType="Long">
        delete
        from xf_car_return
        where id = #{id}
    </delete>

    <delete id="deleteXfCarReturnByIds" parameterType="String">
        delete from xf_car_return where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>