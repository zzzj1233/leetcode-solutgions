<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.xf.mapper.XfWorkAdviseImgMapper">
    
    <resultMap type="XfWorkAdviseImg" id="XfWorkAdviseImgResult">
        <result property="id"    column="id"    />
        <result property="url"    column="url"    />
        <result property="workId"    column="work_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectXfWorkAdviseImgVo">
        select id, url, work_id, create_time from xf_work_advise_img
    </sql>

    <select id="selectXfWorkAdviseImgList" parameterType="XfWorkAdviseImg" resultMap="XfWorkAdviseImgResult">
        <include refid="selectXfWorkAdviseImgVo"/>
        <where>  
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="workId != null "> and work_id = #{workId}</if>
        </where>
    </select>
    
    <select id="selectXfWorkAdviseImgById" parameterType="Long" resultMap="XfWorkAdviseImgResult">
        <include refid="selectXfWorkAdviseImgVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertXfWorkAdviseImg" parameterType="XfWorkAdviseImg" useGeneratedKeys="true" keyProperty="id">
        insert into xf_work_advise_img
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="url != null  and url != ''">url,</if>
            <if test="workId != null ">work_id,</if>
            <if test="createTime != null ">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="url != null  and url != ''">#{url},</if>
            <if test="workId != null ">#{workId},</if>
            <if test="createTime != null ">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateXfWorkAdviseImg" parameterType="XfWorkAdviseImg">
        update xf_work_advise_img
        <trim prefix="SET" suffixOverrides=",">
            <if test="url != null  and url != ''">url = #{url},</if>
            <if test="workId != null ">work_id = #{workId},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteXfWorkAdviseImgById" parameterType="Long">
        delete from xf_work_advise_img where id = #{id}
    </delete>

    <delete id="deleteXfWorkAdviseImgByIds" parameterType="String">
        delete from xf_work_advise_img where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteByWorkId">
        delete from xf_work_event_img where work_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <insert id="saveBatch">
        insert into xf_work_advise_img (url,work_id,create_time) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.url},#{item.workId},#{item.createTime})
        </foreach>
    </insert>

    <select id="selectXfWorkImgList" parameterType="Long" resultType="com.ruoyi.project.xcx.response.XfWorkImgVo">
        select url from xf_work_advise_img
        where work_id = #{id}
    </select>
    
</mapper>